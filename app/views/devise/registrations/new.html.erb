<div class="container">
  <div class="row">
    <div class="col-md-offset-4 col-md-4">
      <div class="jumbotron text-center signup-header">
        <h2>Let's Talk!</h2>
        <p>Join the Community</p>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          
          <div class="well">
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, autofocus: true, placeholder: "ie. Joe", class: "form-control" %></div>
    
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, placeholder: "ie. joe@example.com", class: "form-control" %></div>
    
            <div class="form-group">
              <%= f.label :password %>
              <%= f.password_field :password, autocomplete: "off", placeholder: "Anything except 'password', please.", class: "form-control" %></div>
    
            <div class="form-group">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %></div>
    
            <div class="text-center"><%= f.submit "Sign up", class: "btn btn-success btn-lg" %></div>
          </div>
          
      <% end %>
      <hr>
  
      <div class="text-center"><%= render "devise/shared/links" %></div>
  
    </div>
  </div>
</div>