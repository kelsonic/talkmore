<!--Conversations Panel-->
<div class="col-md-4">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-8 col-md-offset-2 text-center conversation-header">
        <h3>Your Conversations</h3>
      </div>
    </div>
    <div class="text-center">
      <div style="height: 400px; overflow-y: auto;">
        <% if @conversations.any? %>
            <ul class="media-list">
              <% @conversations.each do |conversation| %>
                  <div class="row">
                    <div class="col-md-6 col-md-offset-3 conversation-row">
                      <li class="media">
                        <%= image_tag("http://placehold.it/50x50", class: "media-object pull-left") %>
                        <div class="media-body">
                          <%= link_to "", conversation_path(conversation), class: "conversation", "data-cid" => conversation.id %>
                              <h4 class="media-heading chat-panel-user"><%= conversation_interlocutor(conversation).name %></h4>
                              <p class="chat-panel-text"><%= conversation.messages.last.nil? ? "No messages" : truncate(conversation.messages.last.body, length: 30) %></p>
                        </div>
                      </li>
                    </div>
                  </div>
              <% end %>
            </ul>
        <% else %>
            <p>You have no conversations. Click send message with any user to create one.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>